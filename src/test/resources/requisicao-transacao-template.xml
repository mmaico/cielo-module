<?xml version="1.0" encoding="ISO-8859-1"?>
<requisicao-transacao versao="1.2.1" id="a97ab62a-7956-41ea-b03f-c2e9f612c293" xmlns="http://ecommerce.cbmp.com.br">
	<dados-ec>
		<numero>$transaction.bEstablishment.number</numero>
		<chave>$transaction.bEstablishment.key</chave>
	</dados-ec>
	#if($transaction.payment.card)
		<dados-portador>
			<numero>$transaction.payment.card.number</numero>	
			<validade>$transaction.payment.card.validity</validade>	
			<indicador>$transaction.payment.card.indicatorSecurityCode.code</indicador>	
			<codigo-seguranca>$transaction.payment.card.securityCode</codigo-seguranca>
			#if($transaction.payment.card.ownerName)
				<nome-portador>$transaction.payment.card.ownerName</nome-portador>
			#end
		</dados-portador>
	#end
	<dados-pedido>
		<numero>$transaction.order.number</numero>
		<valor>$transaction.order.amount</valor>
		<moeda>$transaction.order.currency.getCode()</moeda>
		<data-hora>$dateUtil.dateToIso($transaction.order.date)</data-hora>
		#if($transaction.order.description)
			<descricao>$transaction.order.description</descricao>
		#end
		#if($transaction.order.lang)
			<idioma>$transaction.order.lang.getName()</idioma>
		#end
		#if($transaction.order.airportTaxes)
			<taxa-embarque>$transaction.order.airportTaxes</taxa-embarque>
		#end
		#if($transaction.order.softDescriptor)
			<soft-descriptor>$transaction.order.softDescriptor</soft-descriptor>
		#end
	</dados-pedido>
	<forma-pagamento>
		<bandeira>$transaction.payment.creditCardType.getType().toLowerCase()</bandeira>
		<produto>$transaction.payment.modality.code</produto>
		<parcelas>$transaction.payment.plots</parcelas>
	</forma-pagamento>
	<url-retorno>$transaction.urlToReturn</url-retorno>
	<autorizar>$transaction.indicateAuthorization.code</autorizar>
	<capturar>$transaction.capture</capturar>
</requisicao-transacao>